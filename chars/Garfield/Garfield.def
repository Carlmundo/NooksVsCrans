; Definition file for Kung Fu Man
; Contains all the filenames needed for the character

; Player information
[Info]
name = "Garfield"        ;Name of character
displayname = "Garfield" ;Name of character to display
versiondate = 09,30,2009    ;Version date of character (MM-DD-YYYY or X.XX)
mugenversion = 1.0          ;Version of M.U.G.E.N character works on (X.XX)
author = "Veanko"         ;Character author name
pal.defaults = 1,2,3,4      ;Default palettes in order of preference (up to 4)
                            ;Numbering starts from 1
localcoord = 320,240        ;Local coordinate space width and height

; Files for the player
[Files]
cmd     = Garfield.cmd           ;Command set
cns     = Garfield.cns           ;Constants
st      = Garfield.cns           ;States
stcommon = common1.cns      ;Common states (from data/ or motif)
sprite  = Garfield.sff           ;Sprite
anim    = Garfield.air           ;Animation
sound   = Garfield.snd           ;Sound

pal1 = GarfieldPalettes\Default.act
pal2 = GarfieldPalettes\Nermal.act
pal3 = GarfieldPalettes\Odie.act
pal4 = GarfieldPalettes\Green.act
pal5 = GarfieldPalettes\Comic.act
pal6 = GarfieldPalettes\Red.act

