; Definition file for RoboCop
; Contains all the filenames needed for the character

; Player information
[Info]
name = "RoboCop"        ;Name of character
displayname = "RoboCop" ;Name of character to display
versiondate = 05,30,2006    ;Version date of character
mugenversion = 04,14,2001   ;Version of M.U.G.E.N character works on
author = "Ryou Win"         ;Character author name
;pal.defaults = 6,3,4,2      ;Default palettes in order of preference

; Files for the player
[Files]
cmd     = robocop.cmd   ;Command set
cns     = robocop.cns   ;Constants
st      = robocop.st   ;States
stcommon = common1.cns ;Common states
sprite  = robocop.sff   ;Sprite
anim    = Robocop.air   ;Animation
sound   = robocop-p.snd   ;Sound
pal1    = robocop.act  ;Palettes (can have up to 12)
pal2    = robocop2.act
pal3    = robocop3.act
pal4    = robocop4.act
pal5    = robocop5.act
pal6    = robocop6.act
pal7    = robocop7.act
pal8    = robocop13.act
pal9    = robocop14.act
pal10   = robocop10.act
pal11   = robocop15.act
pal12   = robocop16.act

; Arcade mode
[Arcade]
intro.storyboard = robointro.def
ending.storyboard = robo-end.def