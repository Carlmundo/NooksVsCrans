author = "jafar"

;--------------------------------------------------------
[Camera]
startx = 0
starty = 0
boundleft = -92
boundright = 92
boundhigh = -525
boundlow = 0
verticalfollow = 1.1
floortension = 99
tension = 80
overdrawhigh = 0
overdrawlow = 0
cuthigh = 35
cutlow = 25
zoomout = 0.90
zoomin = 1

;--------------------------------------------------------
[PlayerInfo]
;--- Player 1 ---
p1startx = -70          ;Starting x coordinates
p1starty = 0            ;Starting y coordinates
p1facing = 1            ;Direction player faces: 1=right, -1=left

;--- Player 2 ---
p2startx = 70
p2starty = 0
p2facing = -1

;--- Common ---
 ;Don't change these values.
leftbound  = -1000 ;Left bound (x-movement)
rightbound =  1000 ;Right bound

;--------------------------------------------------------
[Bound]
screenleft = 15    ;Dist from left of screen that player can move to
screenright = 15   ;Right edge

;--------------------------------------------------------
[StageInfo]
zoffset = 215
autoturn = 1
resetBG = 0    ;1e.
localcoord = 320, 240
hires = 1
xscale = 0.24
yscale = 0.24

;--------------------------------------------------------
[Shadow]
intensity = 96
color = 0,0,0
yscale = .3
fade.range = 0,0

;--------------------------------------------------------
[Reflection]
intensity = 0

;--------------------------------------------------------
[Music]
bgmusic = sound/Gogeta's theme.mp3
bgmvolume = 100

