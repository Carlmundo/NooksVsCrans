;--------------------------------------------------------
[Info]
 ;Name of the stage.
name = "Gang-Plank Galleon"

;--------------------------------------------------------
[Camera]

startx = 0
starty = 0
boundleft = -96
boundright = 95
boundhigh = -10
boundlow = 0
verticalfollow = .4
floortension = 27
tension = 50

;--------------------------------------------------------
[PlayerInfo]
;--- Player 1 ---
 ;Player 1 starting coordinates.
 ;p1startx is typically -70 and p2startx is 70.
 ;p1starty and p1startz should be 0.
p1startx = -80 
p1starty = 0   
p1startz = 0       
p1facing = 1          

;--- Player 2 ---
p2startx = 80
p2starty = 0
p2startz = 0
p2facing = -1

;--- Common --- ;The "boundleft" and "boundright" already take care of this.
leftbound  = -1000 
rightbound =  1000
topbound  =  0 
botbound  =  0   

;--------------------------------------------------------
[Scaling]
 ;No need to change these values
topz     = 0      
botz     = 50      
topscale = 1   
botscale = 1.2   

;--------------------------------------------------------
[Bound]
 ;Distance from left/right edge of screen that player can move to
 ;Typically 15
screenleft = 25    ;Dist from left of screen that player can move to
screenright = 25   ;Right edge

;--------------------------------------------------------
[StageInfo]
 ;Adjust this value to move the ground level up/down in the screen.
 ;It's the position where the players stand at.
 ;Up - smaller, Down - larger
zoffset = 226
zoffsetlink = 1

 ;Leave this at 1. It makes the players face each other
autoturn = 1

 ;Set the following to 1 to have the background be reset between rounds.
resetBG = 1

;--------------------------------------------------------
[Shadow]
 ;This is the shadow darkening intensity. 
intensity = 255

 ;This is the shadow color given in r,g,b.
;color = 255,255,255

 ;This is the scale factor of the shadow. Use a big scale factor
 ;to make the shadow longer. You can use a NEGATIVE scale factor
 ;to make the shadow fall INTO the screen.
yscale = .3

 ;This parameter lets you set the range over which the shadow is
 ;visible. The first value is the high level, and the second is
 ;the middle level.
fade.range = -5,-10

;--------------------------------------------------------
[Reflection]
 ;Intensity of reflection (from 0 to 256). Set to 0 to have no
 ;reflection.
intensity = 0

;--------------------------------------------------------
[Music]
bgmusic = sound/DKC-Gang-Plank Galleon.mp3
bgvolume = 255

